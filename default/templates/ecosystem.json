{
  "deploy" : {
    "staging" : {
      "user" : "deploy",
      "host" : "staging.ers.local",
      "ref"  : "origin/master",
      "repo" : "git@gitlab.ers.local:<%= repo %>.git",
      "path" : "~/<%= name %>",
      "post-deploy" : "npm i && npm run build"
    },
    "production" : {
      "user" : "deploy",
      "host" : "web.ers.local",
      "ref"  : "origin/master",
      "repo" : "git@gitlab.ers.local:<%= repo %>.git",
      "path" : "/webdata/www/<%= name %>",
      "post-deploy" : "npm i && npm run build"
    }
  }
}
